{
  "name": "platomo",
  "scripts": {
    "watch": "npx tailwindcss -i ./src/css/tailwind.css -o ./assets/css/styles.css --content './site/**/*.php' -w",
    "build": "npx tailwindcss -i ./src/css/tailwind.css -o ./assets/css/styles.css --content './site/**/*.php' -m",
    "pwatchjs": "parcel watch assets/js/app.js --dist-dir assets/dist/js",
    "pwatchless": "parcel watch ./src/less/plato.less --dist-dir assets/css"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.14.8",
    "alpinejs": "^3.14.8",
    "lazysizes": "^5.3.2",
    "plyr": "^3.7.8",
    "swup": "^4.8.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@parcel/transformer-less": "^2.10.3",
    "parcel": "^2.10.3"
  }
}
